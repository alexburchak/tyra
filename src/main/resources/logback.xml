<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{ctx}] [%t] %-5p [%c{1}] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${TYRA_HOME}/logs/tyra.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>tyra.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <append>true</append>

        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{ctx}] [%t] %-5p [%c{1}] %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.alexburchak.tyra" level="DEBUG"/>

    <logger name="org.springframework" level="INFO"/>

    <logger name="com.gargoylesoftware.htmlunit" level="INFO"/>

    <logger name="com.gargoylesoftware.htmlunit.WebAssert" level="OFF"/>

    <logger name="com.gargoylesoftware.htmlunit.javascript.StrictErrorReporter" level="OFF"/>

    <root level="INFO">
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="fileAppender"/>
    </root>
</configuration>
